<Window x:Class="SignalRServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignalR Server" Height="540" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- 서버 상태 및 제어 -->
        <StackPanel Grid.Row="0" Margin="10,10,10,10" Orientation="Horizontal">
            <TextBlock Text="서버 상태: " VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBlock x:Name="ServerStatusText" Text="중지됨" VerticalAlignment="Center" Margin="5,0" Foreground="Red"/>
            <Button x:Name="StartServerButton" Content="서버 시작" Click="StartServerButton_Click" Margin="10,0"/>
            <Button x:Name="StopServerButton" Content="서버 중지" Click="StopServerButton_Click" Margin="10,0" IsEnabled="False"/>
            <TextBlock Text="포트:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <TextBox x:Name="PortTextBox" Text="5000" Width="80" VerticalAlignment="Center"/>
            <TextBlock Text="경로:" Margin="12,0,7,0"/>
            <TextBox x:Name="HubPath" Text="/HyonEx" Width="80"/>
        </StackPanel>

        <!-- 연결된 클라이언트 목록 -->
        <GroupBox Grid.Row="1" Header="연결된 클라이언트" Margin="10,10,10,10">
            <ListBox x:Name="ConnectedClientsListBox" Margin="5"/>
        </GroupBox>

        <!-- 메시지 로그 -->
        <GroupBox Grid.Row="2" Header="서버 로그" Grid.RowSpan="1">
            <ListBox x:Name="LogListBox"/>
        </GroupBox>
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button x:Name="ClearLogButton" Content="로그 지우기" 
                Width="100" Height="25" Margin="0,0,5,0"/>
            <Button x:Name="SendMessageButton" Content="전체 메시지 전송" 
                Width="120" Height="25" Margin="0,0,5,0" Click="SendMessageButton_Click"/>
            <TextBox x:Name="MessageTextBox" Width="300" Height="25" 
                VerticalAlignment="Center" Margin="0,0,5,0"/>
        </StackPanel>
    </Grid>
</Window> 